#include <ESP8266WiFi.h>
const char* ssid= "your hotspot name";
const char* password="your password of hotspot";

void setup() {
  pinMode(D0,OUTPUT);
  digitalWrite(D0,LOW);

  Serial.begin(115200); %baud rate required for ESP8266
  Serial.println();
  Serial.print("WiFi connecting to"); 
  Serial.println(ssid);
  WiFi.begin(ssid,password);
  Serial.println();
  Serial.println("Connecting");
  while(WiFi.status()!=WL_CONNECTED)  %if you put a semicolon it will shoe an error to you it is expected a semicolon pic but not in arduino
  {
    delay(500);
    Serial.print(".");
  }
  digitalWrite(D0, HIGH);
  Serial.print();
  Serial.println("WiFi Connected Success");
  Serial.print( "NodeMCU IP Address: ");
  Serial.println(WiFi.localIP());
  
    
    
  }
  
  }



void loop() {
  // put your main code here, to run repeatedly:

}
